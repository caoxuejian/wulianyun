<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.thecamhi.base.TitleView
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_camera_nike" />

                <EditText
                    android:id="@+id/edt_nikename"
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                  
                    android:gravity="center"
                    android:hint="@string/hint_nike"
                    android:layout_marginLeft="15dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="18sp" 
                    android:textColor="@color/font_edit_input"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/space_line"
                android:contentDescription="@null"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_camera_uid" />

                <EditText
                    android:id="@+id/edt_uid"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    
                    android:gravity="center"
                    android:hint="@string/hint_uid"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp" 
                    android:textColor="@color/font_edit_input" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/space_line"
                android:contentDescription="@null"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@null"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_camera_user" />

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    
                    android:gravity="center"
                    android:hint="@string/hint_user"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/font_edit_input"
                     />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/space_line"
                android:contentDescription="@null"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_camera_key"
                     />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                   
                    android:gravity="center"
                    android:hint="@string/hint_key"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/font_edit_input"
                     />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/space_line"
                android:contentDescription="@null"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/txt_delete_camera"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/font_normal"
                     />

                <ToggleButton
                    android:id="@+id/togbtn_delete_camera"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_btn_bg"
                    android:textOff="@null"
                    android:textOn="@null" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>