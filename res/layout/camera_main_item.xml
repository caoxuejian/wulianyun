<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_click_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/snapshot_camera_item"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:layout_margin="5dip"
        android:background="#00000000"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nickname_camera_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/uid_camera_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/state_camera_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_alarm"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:src="@drawable/ic_alarm"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:clickable="true"
        android:background="@drawable/layout_click_bg"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:src="@drawable/btn_edit_nor" />

    <ImageView
        android:id="@+id/setting_camera_item"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/layout_click_bg"
        android:paddingRight="2dip"
        android:src="@drawable/ic_setting_btn_no" />

</LinearLayout>